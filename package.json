{
  "name": "test-test",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "~5.10.1",
    "@testing-library/react": "~10.2.1",
    "@testing-library/user-event": "~11.4.2",
    "axios": "^0.21.1",
    "dayjs": "^1.8.29",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-intl": "^5.3.0",
    "react-scripts": "3.4.1",
    "react-toastify": "^6.0.8",
    "styled-components": "^5.1.1",
    "universal-cookie": "^4.0.3"
  },
  "scripts": {
    "start": "concurrently 'yarn start:fe' 'yarn start:mock'",
    "start:fe": "react-scripts start",
    "start:mock": "nodemon -w ./mock mock/server.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "distribute": "yarn build && rm -r ../src/main/resources/public; cp -a build ../src/main/resources/public",
    "format": "prettier --write src/"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write src/"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "devDependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "css-loader": "^3.6.0",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.5",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "style-loader": "^1.2.1",
    "uuid": "^8.1.0"
  }
}
